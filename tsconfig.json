{
    "compilerOptions": {
      "target": "es5",                          
      // "module": "NodeNext",                    
      // "lib": ["ESNext"],                     
      "allowJs": true,
      "outDir": "build",                          
      "baseUrl": ".",
      "strict": true,         
      "noImplicitAny": true,
      "esModuleInterop": true,
      "resolveJsonModule": true,
      "downlevelIteration": true,
      "pretty": true,
    },
    "include": [
      "src/**/*.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}