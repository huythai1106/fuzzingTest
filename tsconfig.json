{
    "compilerOptions": {
      "target": "es5",                          
      "module": "commonjs",                    
      "lib": ["es6"],                     
      "allowJs": true,
      "outDir": "build",                          
      "rootDir": "src",
      "baseUrl": ".",
      "strict": true,         
      "noImplicitAny": true,
      "esModuleInterop": true,
      "resolveJsonModule": true,
      "downlevelIteration": true,
      "pretty": true,
    },
    "include": [
      "src/**/*.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}